{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all cpp",
            "type": "shell",
            "command": "C:/msys64/usr/bin/bash.exe",
            "args": [
                "-c",
                "shopt -s globstar && C:/msys64/ucrt64/bin/g++.exe -fdiagnostics-color=always -g /c/Users/user/Desktop/WorkSpace/Senna-Engine/**/*.cpp -o /c/Users/user/Desktop/WorkSpace/Senna-Engine/app.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}